package bus.ticketer.connection;

import java.util.ArrayList;

import org.apache.http.NameValuePair;

public class ConnectionThread extends Thread{
	
	final ConnectionHandler runConnection;
	
	public ConnectionThread(String link, String method, ArrayList<NameValuePair> payload) {
		runConnection = new ConnectionHandler(link, method, payload);
	}
	
	@Override
	public void run() {
		runConnection.run();
	}
}
