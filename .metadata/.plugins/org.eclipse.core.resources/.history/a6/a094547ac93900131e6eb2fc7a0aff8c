package bus.ticketer.connection;

import java.util.ArrayList;

import org.apache.http.NameValuePair;
import org.json.JSONObject;

import bus.ticketer.utils.Method;

public class ConnectionThread extends Thread{
	
	final ConnectionHandler runConnection;
	
	public ConnectionThread(String link, Method method, ArrayList<NameValuePair> payload) {
		runConnection = new ConnectionHandler(link, method.toString(), payload);
	}
	
	@Override
	public void run() {
		runConnection.run();
	}
	
	public JSONObject getJSON() {
		return runConnection.getResultObject();
	}
}
